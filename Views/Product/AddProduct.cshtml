<!-- Example of a Product Create View -->
@model ProductModel

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2>Add a new product</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" aria-required="true" placeholder="name" />
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Category" class="form-control" aria-required="true" placeholder="surname" />
                <label asp-for="Category">Category</label>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <label asp-for="ProductionDate"> Production Date</label>
            <div class="form-floating mb-3">
                <input asp-for="ProductionDate" type="date" class="form-control" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>

            <button id="btnAddProduct" type="submit" class="w-100 btn btn-lg btn-primary">Add</button>
        </form>
    </div>
</div>

